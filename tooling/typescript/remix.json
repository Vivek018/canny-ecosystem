{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Remix.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "remix"
      }
    ],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true
  }
}
