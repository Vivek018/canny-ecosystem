{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "**/.env"
  ],
  "ui": "stream",
  "tasks": {
    "build": {
      "env": [
        "SUPABASE_DATABASE_URL",
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "OPENAI_KEY",
        "SESSION_SECRET"
      ],
      "inputs": [
        ".env"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ]
    },
    "start": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "inputs": [
        ".env"
      ],
      "persistent": true,
      "cache": false
    }
  }
}